{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@doc-blocks/*": [
        ".storybook/doc-blocks/*"
      ]
    }
  },
  "types" : ["node", "jest"],
  "include": [
    "markdown.d.ts",
    "css.d.ts",
    "scss.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".storybook/test-runner.ts",
    "config/setup.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
